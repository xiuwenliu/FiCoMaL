
@{
    ViewBag.Title = "HourseManager";
}

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    馬匹名字
                </th>
                <th>
                    生日
                </th>
                <th>
                    品種
                </th>
                <th>
                    身高
                </th>
                <th>
                    性別
                </th>
                <th>
                    性格
                </th>

                <th>
                    功能
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var modelItem in this.Model)
            {
                <tr class="hourseEntity" id="@modelItem.ID">
                    <td id="Hourse">@modelItem.HorseName</td>
                    <td id="Birthday">@modelItem.Birthday</td>
                    <td id="Breed">@modelItem.Breed</td>
                    <td id="Height">@modelItem.Height</td>
                    <td id="Sex">@modelItem.Sex</td>
                    <td id="Temper">@modelItem.Temper</td>         
                    <td id="functionGroup">
                        <button id="@modelItem.ID" class="btn btn-info modifyBtn">修改</button>
                        <button id="@modelItem.ID" class="btn btn-danger delBtn">刪除</button>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

